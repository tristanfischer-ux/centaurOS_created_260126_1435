# ===========================================
# CentaurOS Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Supabase Configuration
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# Stripe Configuration (use test keys for development)
# ===========================================
# Get your test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Webhook secret for local development
# Run `stripe listen --forward-to localhost:3000/api/webhooks/stripe`
# to get your webhook signing secret
STRIPE_WEBHOOK_SECRET=whsec_...

# ===========================================
# OpenAI Configuration
# ===========================================
# Required for AI features (voice-to-task, marketplace search, etc.)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Telegram Bot Configuration
# ===========================================
# Create a bot with @BotFather on Telegram
# 1. Start chat with @BotFather
# 2. Send /newbot and follow instructions
# 3. Copy the token provided

TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
TELEGRAM_BOT_USERNAME=YourBotName  # Without @ symbol
TELEGRAM_WEBHOOK_SECRET=your-random-secret  # Optional, for webhook verification

# Set webhook URL (run once after deployment):
# curl -X POST "https://api.telegram.org/bot<YOUR_TOKEN>/setWebhook?url=https://your-domain.com/api/bot/telegram&secret_token=<YOUR_WEBHOOK_SECRET>"

# ===========================================
# Push Notifications (optional)
# ===========================================
# VAPID keys for web push notifications
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:your-email@example.com

# ===========================================
# Testing Configuration (optional)
# ===========================================
# Set to 'true' to enable test mode features
TEST_MODE=false

# Test user credentials (used by seed scripts)
TEST_USER_PASSWORD=password123
